<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
</table>

<a href="<%= edit_cat_url(@cat) %>">Edit <%= @cat.name %></a>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Requester</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <!-- Optimize out N+1 request -->
  <% reqs = @cat.rental_requests.order('start_date').includes(:requester) %>
  <% reqs.each do |req| %>
    <%= render 'req_tr', req: req %>
  <% end %>
</table>

<% if logged_in? %>
  <%= link_to 'Rent Cat', new_cat_rental_request_url(cat_id: @cat.id) %>
<% end %>
