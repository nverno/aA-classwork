<%= render 'shared/errors' %>

<h2><%= @album.title %></h2>

<table>
  <tr>
    <th>Artist</th>
    <th>Title</th>
    <th>Year</th>
    <th>Live</th>
  </tr>
  <tbody>
    <td><%= link_to @album.band.name, band_url(@album.band) %></td>
    <td><%= link_to @album.title, album_url(@album) %></td>
    <td><%= @album.year %></td>
    <td><%= @album.live %></td>
  </tbody>
</table>

<h3>Tracks</h3>
<ul>
  <% @album.tracks.order('ord').each do |track| %>
    <li style="list-style: none">
      <%= track.ord %>. <%= link_to "#{track.title}", track_url(track) %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit Album', edit_album_url(@album) %>
