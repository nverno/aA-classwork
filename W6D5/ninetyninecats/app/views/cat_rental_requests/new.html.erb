<h1>Rent a Cat</h1>

<%= render 'shared/errors' %>

<form action="<%= cat_rental_requests_url %>" method="post">

  <label>Cat
    <select name="cat_rental_request[cat_id]">
      <option></option>
      <% Cat.all.each do |cat| %>
        <% selected = @rental_request.cat_id == cat.id %>
        <option
          <%= selected ? "selected" : "" %>
          value="<%= cat.id %>">
          <%= cat.name %>
        </option>
      <% end %>
    </select>
  </label>
  <br/>

  <label>Start Date
    <input type="date"
           name="cat_rental_request[start_date]"
           value="<%= @rental_request.start_date %>"
           id="cat_rental_request_start_date">
  </label>
  <br/>

  <label>End Date
    <input type="date"
           name="cat_rental_request[end_date]"
           value="<%= @rental_request.end_date %>"
           id="cat_rental_request_end_date">
  </label>

  <input type="submit"/>
</form>
