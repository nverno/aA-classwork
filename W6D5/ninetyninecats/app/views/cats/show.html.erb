<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% %i[age birth_date color sex].each do |attr| %>
    <tr class="cat-attributes">
      <td><%= attr %></td>
      <td><%= @cat.send(attr) %></td>
    </tr>
  <% end %>
</table>

<% if @cat.description.length > 0 %>
  <p><%= @cat.description %></p>
<% end %>

<a href="<%= edit_cat_url(@cat) %>">Edit <%= @cat.name %></a>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.cat_rental_requests.order('start_date').each do |req| %>
    <%= render 'req_tr', req: req %>
  <% end %>
</table>

<%= link_to "Rent cat", new_cat_rental_request_url(cat_id: @cat.id) %>
